<%- include('./partials/header.ejs') %>
<container>
    <div class="row align-center">
        <div class="mx-auto">
            <h2>Add morning report</h2>
            <form method="POST" action="/behavior/reporting/morning">
                <%- include('./partials/errors.ejs', { errors: errors }) %>
                <div>
                    <label for="sleepDuration">Sleep duration (in hours)</label>
                    <input type="number" name="sleepDuration" step=".1" min="0" id="sleepDuration" value="<%= morningReport.sleepDuration %>"/>
                </div>
                <br/>

                <div>
                    <label for="sleepQuality">Sleep quality</label>
                    <input type="range" name="sleepQuality" min="1" max="5" id="sleepQuality" value="<%= morningReport.sleepQuality %>"/>
                </div>
                <br/>

                <div>
                    <label for="mood">Mood</label>
                    <input type="range" name="mood" id="mood" min="1" max="5" value="<%= morningReport.mood %>"/>
                </div>
                <br/>

                <div>
                    <label for="day">Date</label>
                    <input type="date" name="day" id="day" value="<%= today %>"/>
                </div>
                <br/>

                <input type="submit" value="Save" class="btn btn-success"/>
            </form>
            <br/>

            <a href="/behavior/reporting" class="btn btn-info" role="button">Go back</a>
        </div>
    </div>
</container>
<%- include('./partials/footer.ejs') %>